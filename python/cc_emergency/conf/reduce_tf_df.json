{
	"pipeline": [
		{
			"class": "cc_emergency.functional.io.JsonReader",
			"args": ["$input"]
		},
		{
			"class": "cc_emergency.functional.transforms.CoNLLToCounts",
			"args": [
				{"content_corenlp": ["lemma", true, true, "counts"]}
			]
		},
		{
			"class": "cc_emergency.functional.collectors.TFDFCollector",
			"kwargs": {
				"field_weights" : {"counts": 1}
			}
		}
	],
	"reducer": {
		"class": "cc_emergency.functional.collectors.DictAggregator",
		"args": [["TF", "DF"]]
	}
}


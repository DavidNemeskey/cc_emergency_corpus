{
	"pipeline": [
		{
			"class": "cc_emergency.functional.io.JsonReader",
			"args": ["$input"]
		},
		{
			"class": "cc_emergency.functional.transforms.corenlp_preprocessor.CoreNLP",
			"kwargs": {
				"props": {
					"server": {
						"directory": "/mnt/store/hlt/Tool/Stanford_CoreNLP/stanford-corenlp-full-2016-10-31/",
						"port": "9${process}73",
						"memory": "15g"
					},
					"URL": {
						"annotators": "tokenize,ssplit,pos,lemma,ner",
						"outputFormat": "conll",
						"tokenize.language": "English"
					}
				},
				"fields": ["content"]
			},
			"connection": "map"
		},
		{
			"class": "cc_emergency.functional.io.JsonWriter",
			"args": ["$output"]
		}
	]
}
